# This config is initially in sites-available
# and only later added to sites-enabled, because it needs 
# letsencrypt certificates



# Dev (local) servers
# Static files are served by Django
server {
    listen 80;
    server_name dev.budgetwiser.org;
    charset utf-8;

    location / {
        # Force HTTPS
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name dev.budgetwiser.org;
    charset utf-8;

    sendfile off;

    ssl_certificate /etc/letsencrypt/live/xproj-api.hyunwoo.me/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/xproj-api.hyunwoo.me/privkey.pem;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';

    location / {
        try_files $uri @django;
        # CORS Setup from https://gist.github.com/michiel/1064640
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Credentials' 'true';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type';
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain charset=UTF-8';
            add_header 'Content-Length' 0;

            return 204;
        }
    }

    location @django {
        proxy_pass http://web:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 30s;
        proxy_read_timeout 30s;
    }
}



# Staging
# Static files are collected and served by nginx
server {
    listen 80;
    server_name xproj-api.hyunwoo.me;
    charset utf-8;

    # letsencrypt challenge
    location /.well-known/ {
        root /var/www/xproj-api.hyunwoo.me/;
    }

    location / {
        # Force HTTPS
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name xproj-api.hyunwoo.me;
    charset utf-8;

    ssl_certificate /etc/letsencrypt/live/xproj-api.hyunwoo.me/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/xproj-api.hyunwoo.me/privkey.pem;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';

    location /static {
        include /etc/nginx/mime.types;
        alias /usr/src/collected_static;
    }

    location / {
        try_files $uri @django;
    }

    location @django {
        proxy_pass http://web:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 30s;
        proxy_read_timeout 30s;
    }
}


